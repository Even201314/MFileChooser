<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/file_chooser_title_height"
    android:background="@drawable/selector_background"
    android:paddingEnd="@dimen/file_chooser_margin_horizontal"
    android:paddingLeft="@dimen/file_chooser_margin_horizontal"
    android:paddingRight="@dimen/file_chooser_margin_horizontal"
    android:paddingStart="@dimen/file_chooser_margin_horizontal"
    >

    <ImageView
        android:id="@+id/iv_file"
        android:layout_width="@dimen/file_chooser_title_height"
        android:layout_height="@dimen/file_chooser_title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/file_chooser_padding"
        />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/file_chooser_title_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/file_chooser_margin_horizontal"
        android:layout_marginStart="@dimen/file_chooser_margin_horizontal"
        android:layout_toEndOf="@id/iv_file"
        android:layout_toRightOf="@id/iv_file"
        android:gravity="center_vertical"
        />

</RelativeLayout>